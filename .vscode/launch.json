    "version": "0.2.0",
    "configurations": [
        {
            "name": "Back End",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "start"
            ],
            "port": 3000
        },
        {
            "name": "Front End",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}/companiondates.ca",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "serve"
            ],
            "port": 8080
        }
    ]
}